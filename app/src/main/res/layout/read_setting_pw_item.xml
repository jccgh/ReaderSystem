<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/sub_text_size"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/read_typeface_decrease" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/tv_color_click" />

        <ImageView
            android:id="@+id/add_text_size"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/read_typeface_increase" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/tv_color_click" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <ImageView
                android:id="@+id/reading_bg_4"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@drawable/reading_bg_4" />

            <ImageView
                android:id="@+id/reading_bg_5"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:src="@drawable/reading_bg_5" />

            <ImageView
                android:id="@+id/reading_bg_default"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:src="@drawable/reading_bg_default" />

            <ImageView
                android:id="@+id/reading_bg_eye"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:src="@drawable/reading_bg_eye" />

            <ImageView
                android:id="@+id/reading_bg_kraft"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:src="@drawable/reading_bg_kraft" />

            <ImageView
                android:id="@+id/reading_bg_night1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:src="@drawable/reading_bg_night1" />

            <ImageView
                android:id="@+id/reading_bg_night2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:src="@drawable/reading_bg_night2" />

            <ImageView
                android:id="@+id/reading_bg_powerless"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:src="@drawable/reading_bg_powerless" />

            <ImageView
                android:id="@+id/reading_bg_soft"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:src="@drawable/reading_bg_soft" />
        </LinearLayout>
    </HorizontalScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/tv_color_click" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp">

        <ImageView
            android:id="@+id/liner_space_0_2"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/liner_space_0_2" />

        <ImageView
            android:id="@+id/liner_space_1"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/liner_space_1" />

        <ImageView
            android:id="@+id/liner_space_1_5"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/liner_space_1_5" />

        <ImageView
            android:id="@+id/line_space_default"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/liner_space_default" />
    </LinearLayout>
</LinearLayout>