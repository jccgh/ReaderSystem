<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.liyunkun.readersystem">

    <!-- 允许联网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 获取GSM（2g）、WCDMA（联通3g）等网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- 获取sd卡写的权限，用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 允许读取手机状态 用于创建BmobInstallation -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".both.view.activity.LoadingActivity" />
        <activity android:name=".both.view.activity.WelcomeActivity" />
        <activity android:name=".both.view.activity.LoginActivity" />
        <activity android:name=".both.view.activity.ResentActivity" />
        <activity android:name=".student.view.activity.StudentHomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".administrator.view.activity.AdministratorHomeActivity" >

        </activity>
        <activity android:name=".student.view.activity.RankActivity" />
        <activity android:name=".student.view.activity.ClassifyActivity" />
        <activity android:name=".student.view.activity.ClassifyListActivity" />
        <activity android:name=".student.view.activity.BookDetailsActivity"></activity>
    </application>

</manifest>